<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Evaluator.UI.Avalonia.Views.MainWindow"
        Width="520" Height="680" CanResize="False"
        Title="Functions Evaluator"
        Background="#000000">

  <!-- Estilos -->
  <Window.Styles>
    <!-- Base para cualquier botón -->
    <Style Selector="Button">
      <Setter Property="CornerRadius" Value="6"/>
      <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <!-- Botones numéricos -->
    <Style Selector="Button.num">
      <Setter Property="FontSize" Value="22"/>
      <Setter Property="Margin" Value="8"/>
      <Setter Property="MinHeight" Value="72"/>
      <Setter Property="MinWidth"  Value="72"/>
      <Setter Property="Background" Value="#FFFFFF"/>
      <Setter Property="Foreground" Value="#000000"/>
    </Style>
    <!-- Mantener color en hover/pressed/focus -->
    <Style Selector="Button.num:pointerover, Button.num:pressed, Button.num:focus">
      <Setter Property="Background" Value="#FFFFFF"/>
      <Setter Property="Foreground" Value="#000000"/>
    </Style>

    <!-- Botones operadores/acciones -->
    <Style Selector="Button.op">
      <Setter Property="FontSize" Value="20"/>
      <Setter Property="Margin" Value="8"/>
      <Setter Property="MinHeight" Value="72"/>
      <Setter Property="MinWidth"  Value="72"/>
      <Setter Property="Background" Value="#F18A1F"/>
      <Setter Property="Foreground" Value="#000000"/>
    </Style>
    <!-- Mantener color en hover/pressed/focus -->
    <Style Selector="Button.op:pointerover, Button.op:pressed, Button.op:focus">
      <Setter Property="Background" Value="#F18A1F"/>
      <Setter Property="Foreground" Value="#000000"/>
    </Style>

    <!-- Display -->
    <Style Selector="TextBox#Display">
      <Setter Property="FontSize" Value="28"/>
      <Setter Property="Padding" Value="14"/>
      <Setter Property="Background" Value="#2E7D32"/>
      <Setter Property="Foreground" Value="White"/>
      <Setter Property="BorderBrush" Value="#2E7D32"/>
    </Style>
  </Window.Styles>

  <Grid RowDefinitions="Auto,*" Margin="12">

    <!-- Display -->
    <TextBox x:Name="Display"
             Grid.Row="0"
             IsReadOnly="True"/>

    <!-- Teclado -->
    <!-- 6 columnas x 6 filas: todo del mismo tamaño -->
    <Grid Grid.Row="1" Margin="0,10,0,0"
          ColumnDefinitions="*,*,*,*,*,*"
          RowDefinitions="*,*,*,*,*,*">

      <!-- Fila 0 -->
      <Button Classes="num" Content="7" Grid.Row="0" Grid.Column="0" Click="OnKeyClick"/>
      <Button Classes="num" Content="8" Grid.Row="0" Grid.Column="1" Click="OnKeyClick"/>
      <Button Classes="num" Content="9" Grid.Row="0" Grid.Column="2" Click="OnKeyClick"/>
      <Button Classes="op"  Content="(" Grid.Row="0" Grid.Column="3" Click="OnKeyClick"/>
      <Button Classes="op"  Content=")" Grid.Row="0" Grid.Column="4" Click="OnKeyClick"/>
      <Button Classes="op"  Content="/" Grid.Row="0" Grid.Column="5" Click="OnKeyClick"/>

      <!-- Fila 1 -->
      <Button Classes="num" Content="4" Grid.Row="1" Grid.Column="0" Click="OnKeyClick"/>
      <Button Classes="num" Content="5" Grid.Row="1" Grid.Column="1" Click="OnKeyClick"/>
      <Button Classes="num" Content="6" Grid.Row="1" Grid.Column="2" Click="OnKeyClick"/>
      <Button Classes="op"  Content="*" Grid.Row="1" Grid.Column="3" Click="OnKeyClick"/>
      <Button Classes="op"  Content="+" Grid.Row="1" Grid.Column="4" Click="OnKeyClick"/>
      <Button Classes="op"  Content="-" Grid.Row="1" Grid.Column="5" Click="OnKeyClick"/>

      <!-- Fila 2 -->
      <Button Classes="num" Content="1" Grid.Row="2" Grid.Column="0" Click="OnKeyClick"/>
      <Button Classes="num" Content="2" Grid.Row="2" Grid.Column="1" Click="OnKeyClick"/>
      <Button Classes="num" Content="3" Grid.Row="2" Grid.Column="2" Click="OnKeyClick"/>
      <Button Classes="op"  Content="." Grid.Row="2" Grid.Column="3" Click="OnKeyClick"/>
      <Button Classes="op"  Content="^" Grid.Row="2" Grid.Column="4" Click="OnKeyClick"/>
      <Button Classes="op"  Content="=" Grid.Row="2" Grid.Column="5" Click="OnEquals"/>

      <!-- Fila 3 -->
      <Button Classes="num" Content="0" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Click="OnKeyClick"/>
      <Button Classes="op"  Content="(" Grid.Row="3" Grid.Column="2" Click="OnKeyClick"/>
      <Button Classes="op"  Content=")" Grid.Row="3" Grid.Column="3" Click="OnKeyClick"/>
      <!-- celdas 4 y 5 vacías para aire -->
      <Border Grid.Row="3" Grid.Column="4"/>
      <Border Grid.Row="3" Grid.Column="5"/>

      <!-- Fila 4 -->
      <Border Grid.Row="4" Grid.Column="0"/>
      <Border Grid.Row="4" Grid.Column="1"/>
      <Border Grid.Row="4" Grid.Column="2"/>
      <Border Grid.Row="4" Grid.Column="3"/>
      <Border Grid.Row="4" Grid.Column="4"/>
      <Border Grid.Row="4" Grid.Column="5"/>

      <!-- Fila 5 (acciones) -->
      <Button Classes="op" Content="Clear"  Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Click="OnClear"/>
      <Button Classes="op" Content="Delete" Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="3" Click="OnDelete"/>
    </Grid>
  </Grid>
</Window>
